<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Zeigen', user %></td>
    <td><%= link_to 'Bearbeiten', edit_user_path(user) %></td>
    <td><%= link_to 'Loeschen', user, :confirm => 'Bist du sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>

